{
	"env": {
		"browser": true,
		"es6": true,
		"jest/globals": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "jest"],
	"rules": {
		"indent": ["error", "tab"],
		"quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
		"semi": ["error", "always"],
		"react/prop-types": "off"
	}
}
