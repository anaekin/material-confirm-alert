{
	"env": {
		"browser": true,
		"es6": true,
		"jest/globals": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "jest", "prettier"],
	"rules": {
		"linebreak-style": ["error", "unix"],
		"react/prop-types": 0
	},
	"ignorePatterns": ["dist", "coverage"]
}
