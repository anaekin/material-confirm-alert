{
	"name": "material-confirm-alert",
	"version": "3.0.2",
	"description": "A simple react material confirmation alert library",
	"homepage": "https://github.com/anaekin/material-confirm-alert#readme",
	"bugs": {
		"url": "https://github.com/anaekin/material-confirm-alert/issues",
		"email": "animesh.jain1203@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/anaekin/material-confirm-alert.git"
	},
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rollup -c",
		"build-storybook": "build-storybook",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepublishOnly": "npm run test && npm run build",
		"storybook": "start-storybook -p 6006",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:coveralls": "jest --coverage && coveralls < coverage/lcov.info",
		"depcheck": "depcheck",
		"ncu": "ncu"
	},
	"keywords": [
		"react confirm",
		"material confirm",
		"react confirm alert",
		"react confirm dialog",
		"react alert",
		"material alert",
		"react-confirm-alert",
		"material-cofirm-alert"
	],
	"author": "Animesh Jain",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.15.8",
		"@babel/plugin-transform-runtime": "^7.15.8",
		"@babel/preset-env": "^7.15.8",
		"@babel/preset-react": "^7.14.5",
		"@emotion/react": "^11.4.1",
		"@emotion/styled": "^11.3.0",
		"@mui/material": "^5.0.3",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^21.0.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@storybook/addon-actions": "^6.3.7",
		"@storybook/addon-essentials": "^6.1.21",
		"@storybook/addon-links": "^6.3.7",
		"@storybook/react": "^6.3.10",
		"@testing-library/react": "^12.1.2",
		"babel-loader": "^8.2.2",
		"coveralls": "^3.1.1",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^24.5.2",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.1",
		"jest": "^27.2.5",
		"prettier": "^2.4.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rollup": "^2.58.0",
		"rollup-plugin-copy": "^3.4.0",
		"rollup-plugin-peer-deps-external": "^2.2.4"
	},
	"peerDependencies": {
		"@mui/material": "^5.0.3",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react"
		],
		"env": {
			"test": {
				"plugins": [
					"@babel/plugin-transform-runtime"
				]
			}
		}
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
			"<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
		],
		"testEnvironment": "jsdom"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
