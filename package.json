{
	"name": "material-confirm-alert",
	"version": "3.0.4",
	"description": "A simple react material confirmation alert library",
	"homepage": "https://github.com/anaekin/material-confirm-alert#readme",
	"bugs": {
		"url": "https://github.com/anaekin/material-confirm-alert/issues",
		"email": "animesh.jain1203@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/anaekin/material-confirm-alert.git"
	},
	"main": "dist/index.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rollup -c --bundleConfigAsCjs",
		"build-storybook": "build-storybook",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepublishOnly": "npm run test && npm run build",
		"storybook": "start-storybook -p 6006",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:coveralls": "jest --coverage && coveralls < coverage/lcov.info",
		"depcheck": "depcheck",
		"ncu": "ncu"
	},
	"keywords": [
		"react confirm",
		"material confirm",
		"react confirm alert",
		"react confirm dialog",
		"react alert",
		"material alert",
		"react-confirm-alert",
		"material-cofirm-alert"
	],
	"author": "Animesh Jain",
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.24.7",
		"@babel/plugin-transform-runtime": "^7.24.7",
		"@babel/preset-env": "^7.24.7",
		"@babel/preset-react": "^7.24.7",
		"@babel/preset-typescript": "^7.24.7",
		"@emotion/react": "^11.11.4",
		"@emotion/styled": "^11.11.5",
		"@mui/material": "^5.15.20",
		"@rollup/plugin-babel": "^6.0.4",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^11.1.6",
		"@storybook/addon-actions": "^8.1.11",
		"@storybook/addon-essentials": "^8.1.11",
		"@storybook/addon-links": "^8.1.11",
		"@storybook/react": "^8.1.11",
		"@testing-library/react": "^16.0.0",
		"@types/jest": "^29.5.12",
		"@types/react": "^18.3.3",
		"babel-loader": "^9.1.3",
		"coveralls": "^3.1.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^28.6.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.3",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "^3.3.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rollup": "^4.18.0",
		"rollup-plugin-copy": "^3.5.0",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"typescript": "^5.5.2"
	},
	"peerDependencies": {
		"@mui/material": "^5.0.3",
		"react": "^17.0.2 || ^18.0.0",
		"react-dom": "^17.0.2 || ^18.0.0"
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react",
			"@babel/preset-typescript"
		],
		"env": {
			"test": {
				"plugins": [
					"@babel/plugin-transform-runtime"
				]
			}
		}
	},
	"jest": {
		"testMatch": [
			"<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
			"<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
		],
		"testEnvironment": "jsdom"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
